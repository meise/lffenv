config wifi-device  radio0
	option type     mac80211
	option phy	phy0
	option channel  1
	option hwmode   11ng
	option htmode   HT20
	list ht_capab   SHORT-GI-40
	list ht_capab   DSSS_CCK-40
	# REMOVE THIS LINE TO ENABLE WIFI:
	#option disabled 1

config wifi-iface
	option device   radio0
	option ifname   wlan0
	option mode     ap
	option ssid     luebeck.freifunk.net
	option rts      250

config wifi-iface
	option device   radio0
	option ifname   wlan1
	option mode     ap
	option ssid     'luebeck.freifunk.net - Info'
	option rts      250

config wifi-iface
	option device   radio0
	option ifname   wlan2
	option mode     adhoc
	option ssid     mesh.freifunk.net
	option bssid    02:22:B0:44:94:5D
	option probereq 0
	option rts      250
