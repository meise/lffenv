# This file is interpreted as shell script.
# Put your custom iptables rules here, they will
# be executed with each firewall (re-)start.

. /etc/functions.sh

config_load network
config_get ip4addr "private_alias" ipaddr

# Only allow telnet access from a link local address on the WAN port
iptables -I INPUT -p tcp --dport 23 -j DROP
ip6tables -I INPUT -p tcp --dport 23 -j DROP

iptables -I INPUT -p tcp -i br-private -d "$ip4addr" --dport 23 -j ACCEPT
ip6tables -I INPUT -p tcp -i br-private -d fe80::/64 --dport 23 -j ACCEPT
